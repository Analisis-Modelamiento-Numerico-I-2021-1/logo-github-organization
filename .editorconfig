# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.tex]
indent_style = tab
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size=2
indent_style=space

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[*.{c,h,cc,hh,cpp,hpp}]
indent_style = space
indent_size = 2

[*.{py}]
indent_style = space
indent_size = 4
